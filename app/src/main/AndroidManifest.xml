<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        android:minSdkVersion="30" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/archivecol"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/archivecol"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArchiveCol"
        tools:targetApi="31">

        <activity
            android:name=".item_edit"
            android:exported="false" />
        <activity
            android:name=".CategoryView"
            android:exported="true" />
        <activity
            android:name=".log_in_page"
            android:exported="true"
            android:theme="@style/Theme.ArchiveCol">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".forgot_password"
            android:exported="true" />
        <activity
            android:name=".sign_up_page"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>